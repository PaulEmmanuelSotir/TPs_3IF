<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Client.controller.Login_controller">
   <children>
      <GridPane alignment="CENTER" maxWidth="310.0" minHeight="240.0" minWidth="200.0" prefHeight="287.0" prefWidth="310.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" />
            <RowConstraints maxHeight="95.0" minHeight="0.0" prefHeight="21.0" />
            <RowConstraints maxHeight="95.0" minHeight="0.0" prefHeight="74.0" />
        </rowConstraints>
         <children>
            <Label text="LOGIN">
               <font>
                  <Font name="Gill Sans MT" size="36.0" />
               </font>
               <GridPane.margin>
                  <Insets bottom="40.0" />
               </GridPane.margin>
            </Label>
            <Label text="USERNAME" GridPane.rowIndex="1">
               <font>
                  <Font name="Gill Sans MT" size="18.0" />
               </font>
               <GridPane.margin>
                  <Insets />
               </GridPane.margin>
            </Label>
            <TextField fx:id="UsernameTextField" maxWidth="300.0" onAction="#FocusOnPasswordTextField" promptText="username..." GridPane.rowIndex="2">
               <GridPane.margin>
                  <Insets />
               </GridPane.margin>
            </TextField>
            <Label text="PASSWORD" GridPane.rowIndex="3">
               <font>
                  <Font name="Gill Sans MT" size="18.0" />
               </font>
               <GridPane.margin>
                  <Insets />
               </GridPane.margin>
            </Label>
            <PasswordField fx:id="PasswordTextField" maxWidth="300.0" onAction="#SubmitCredentials" promptText="password..." GridPane.rowIndex="4">
               <GridPane.margin>
                  <Insets top="10.0" />
               </GridPane.margin>
            </PasswordField>
            <Button contentDisplay="CENTER" mnemonicParsing="false" onAction="#SubmitCredentials" text="Submit" GridPane.halignment="CENTER" GridPane.rowIndex="5" GridPane.valignment="TOP">
               <GridPane.margin>
                  <Insets top="20.0" />
               </GridPane.margin>
               <font>
                  <Font name="Gill Sans MT" size="14.0" />
               </font>
            </Button>
         </children>
         <VBox.margin>
            <Insets left="10.0" right="10.0" />
         </VBox.margin>
         <padding>
            <Insets top="40.0" />
         </padding>
      </GridPane>
   </children>
</VBox>
